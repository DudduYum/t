	script(type='text/javascript').
		function hideOverlay() {
			var overlay= document.getElementById('overlay');
			
			if (overlay) {
				overlay.classList.toggle('html-panel');
			}
			console.log(overlay)
		}
		
		function getHeight () {
			hideOverlay()
			return Number.parseFloat(document.getElementById('height-value').value) * 0.01;
		}
		
		
	
